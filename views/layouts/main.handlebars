<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Novel Sips</title>
  <link rel="stylesheet" href="./css/style.css">
  {{!-- google fonts stylesheet --}}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Dancing Script">
  {{!-- font awesome stylesheet --}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  {{!-- header --}}
  <header>
    <h1 class="headertitle">
      <a class="pgtitle" href="/">Novel Sips</a>
      <i class="fa fa-coffee" style="font-size:36px"></i>
    </h1>

    {{!-- nav bar --}}
    <nav>
      <ul>

        {{!-- nav bar links --}}
        <section class="navbarlinks">
          <li><a href="/">Home</a></li>
          <li><a href="">Drinks</a></li>
          <li><a href="">Books</a></li>
        </section>

        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}

        {{!-- bookshelf and logout button --}}
        <div class="bookshelf-logoutbtn">
          <button class="bookshelf"><a href="/profile">My Book Shelf</a></button>
          <button class="no-button" id="logout">Log Out</button>
        </div>

        <!-- logout link here -->
        {{else}}

        {{!-- log in and sign up button --}}
        <div class="loginsignupbutton">
          <button class="login"><a href="/login">Log In</a></button>
          <button class="signup"><a href="/signup">Sign Up</a></button>
        </div>

        {{/if}}

      </ul>
    </nav>

  </header>

  <main>
    <!-- Render the sub layout -->
    {{{ body }}}
  </main>

  {{!-- footer --}}
  <footer>

  </footer>

  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/logout"></script>
  {{/if}}

</body>

</html>