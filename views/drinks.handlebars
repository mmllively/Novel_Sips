<body>
    {{!-- pg title --}}
    <h2 class="drinkstitle">Our Drinks</h2>

    <section class="drinksearchcontainer" align="center">
        <div class="drinksearchinput" align="center">
            <h3 class="searchdrinktitle">Search for a drink:</h3>
            <div><input class="drinks-form-input" placeholder="Enter a drink name" /></div>
            <div class="form-group"><button class="submitbtn">Submit</button></div>
