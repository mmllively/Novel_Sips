
<head>
  <title>Novel Sips | My Profile</title>
</head>

{{!-- hero img --}}
<img class="profileheroimg"
  src="https://images.pexels.com/photos/7470111/pexels-photo-7470111.jpeg?cs=srgb&dl=pexels-beyza-7470111.jpg&fm=jpg&_gl=1*1e5268e*_ga*ODY5NDU4MDMxLjE2NjgzNjU0MTY.*_ga_8JE65Q40S6*MTY2ODM3MjE3Ny4yLjAuMTY2ODM3MjE3Ny4wLjAuMA..">

<section class="profilecontainer">
  {{!-- subtitle and paragraph --}}
  <h2 class="profilesubtitle">Welcome to your Book Shelf!</h2>

  {{!-- get books search input and button --}}
  <div class="inputplacement" align="center">
    <input class="getbooksinput" id="input" placeholder="Enter a book title...">
    <button class="getbooks" id="searchBtn">Search</button>

    <div class="favoritescontainer">
      <h3 class="favesectiontitle">Favorite Books and Drinks</h3>

      {{!-- fave book title input field --}}
      <form class="form new-project-form">
        {{!-- book title label --}}
        <div class="faveinputtitle">
          <label class="favebookname" for="post-name">Book Title:</label>
        </div>
        {{!-- title search bar --}}
        <div class="faveforms">
          <input class="faveform-input" placeholder="Enter a book title" type="text" id="post-name" name="post-name" />
        </div>
        {{!-- drink name label --}}

        <div class="faveinputtitle">
          <label class="favedrinkname" for="project-desc">Drink Name:</label>
        </div>
        {{!-- title search bar --}}
        <div>
          <input class="faveform-input" placeholder="Enter a drink name" id="project-desc" name="project-desc"></input>
        </div>
        {{!-- add to favorites button --}}
        <div class="favebtncontainer">
          <button type="submit" class="favoritebtn">Add to favorites!</button>
        </div>

<section>
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Favorite Books and Drinks</h3>

      <div class="comment-card">
         {{#each comments as |comment|}}
        <p class="commentPost">{{comment.content}}</p>
       
        {{/each}}
      </div>
      <section class="card">
  <a href="/drink/{{id}}">
    <header>{{name}}</header>

    <div class="card-body">
      <img src="/images/{{filename}}" alt="{{description}}">
      <p>{{description}}</p>
    </div>
  </a>
</section>

</section>

<section>
<form class="form new-book-form">
 
  <div class="form-group">
    <label for="book-description">Content:</label>
    <input type = "text" class="form-input" id="content-description" name="book-description" placeholder="This was good with hot chocolate!">

  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id = "contentBtn">Create</button>
  </div>
</form>
</div>



{{#if comments.length}}
<div class="col-md-6 post-list">
  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4>{{comment.content}}</h4>
    </div>
   
  <div>
    <button id = "edit-btn" class="btn btn-sm btn-danger"><a href="/api/comments/{{comment.id}}">EDIT</a></button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger deleteBtn {{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>




  {{#if logged_in}}
  <section class="flex-row justify-center">
   <p >{{drink.name}}</p>
   <p >{{drink.description}}</p>
   {{!-- <button class="getdrinks" id="drinkBtn">Drink Generator</button> --}}
  </section>
</section>

<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}

 

