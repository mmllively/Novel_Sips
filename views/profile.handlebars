<div class="row">
  <div class="col-auto">
    <h1>Welcome to your Book Shelf!</h1>
  </div>
</div>

<section>
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Favorite Books and Drinks</h3>

      <div>
        <p>HERE SHOULG GO THE SAVED BOOKS AND DRINKS</p>
      </div>

</section>

<section>
<form class="form new-project-form">
  <div class="form-group">
    <label for="post-name">Book Title:</label>
    <input class="form-input" type="text" id="post-name" name="post-name" placeholder="How the Grinch Stole Christmas" />
  </div>
  <div class="form-group">
    <label for="project-desc">Comments:</label>
    <textarea class="form-input" id="project-desc" name="project-desc" placeholder="This was good with hot chocolate!"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>
</div>
</section>

{{#if posts.length}}
<div class="col-md-6 post-list">
  <h3>Current Blog Posts:</h3>

  {{#each posts as |post|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/all-posts/{{post.author}}">{{post.title}}</a></h4>
    </div>
    <button class="btn btn-sm btn-danger"><a href="/edit/{{post.id}}">EDIT</a></button>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" id="data-id {{post.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>


<script src="/js/profile.js"></script>