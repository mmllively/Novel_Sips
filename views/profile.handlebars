
<div class="row">
  <div class="col-auto">
    <h1>Welcome to your Book Shelf!</h1>
  </div>
</div>

<section>
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Favorite Books and Drinks</h3>

      <div class="comment-card">
         {{#each comments as |comment|}}
        <p class="commentPost">{{comment.content}}</p>
       
        {{/each}}
      </div>
      <section class="card">
  <a href="/drink/{{id}}">
    <header>{{name}}</header>

    <div class="card-body">
      <img src="/images/{{filename}}" alt="{{description}}">
      <p>{{description}}</p>
    </div>
  </a>
</section>

</section>

<section>
<form class="form new-book-form">
 
  <div class="form-group">
    <label for="book-description">Content:</label>
    <input type = "text" class="form-input" id="content-description" name="book-description" placeholder="This was good with hot chocolate!">

  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id = "contentBtn">Create</button>
  </div>
</form>
</div>
</section>

<section>
 {{!-- get books search input and button --}}
  <div class="inputplacement" align="center">
    <input class="getbooksinput" id="input" placeholder="Search for a title...">
    <button class="getbooks" id="searchBtn">Find Books</button>

    {{!-- create a container for books output --}}
    {{!-- create cards for each individual book --}}
    <card class="booksoutput">
      <div class="output" id="output"></div>
    </card>
</section>







{{#if comments.length}}
<div class="col-md-6 post-list">
  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4>{{comment.content}}</h4>
    </div>
   
  <div>
    <button id = "edit-btn" class="btn btn-sm btn-danger"><a href="/api/comments/{{comment.id}}">EDIT</a></button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" id="deleteBtn {{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>




  {{#if logged_in}}
  <section class="flex-row justify-center">
   <p >{{drink.name}}</p>
   <p >{{drink.description}}</p>
   {{!-- <button class="getdrinks" id="drinkBtn">Drink Generator</button> --}}
  </section>
</section>

<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}

 

