<div>
  {{!-- hero img --}}
  <img class="heroimg"
    src="https://images.pexels.com/photos/7470111/pexels-photo-7470111.jpeg?cs=srgb&dl=pexels-beyza-7470111.jpg&fm=jpg&_gl=1*1e5268e*_ga*ODY5NDU4MDMxLjE2NjgzNjU0MTY.*_ga_8JE65Q40S6*MTY2ODM3MjE3Ny4yLjAuMTY2ODM3MjE3Ny4wLjAuMA..">

  {{!-- subtitle and paragraph --}}
  <h2 class="subtitle">Welcome to your Book Shelf!</h2>
</div>

<div>
  <div>
    <h3>Favorite Books and Drinks</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Drink:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Blog Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/all-posts/{{post.author}}">{{post.title}}</a></h4>
      </div>
      <button class="btn btn-sm btn-danger"><a href="/edit/{{post.id}}">EDIT</a></button>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="data-id {{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="/js/profile.js"></script>