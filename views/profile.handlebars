<section class="profilecontainer" align="center">
  {{!-- subtitle and paragraph --}}
  <h2 class="profilesubtitle">Welcome to your Book Shelf!</h2>

  {{!-- get books search input and button --}}
  <div class="profileinputplacement" align="center">
    <p class="profilepgsearch">Search for a book recommendation:</p>
    <input class="getbooksinput" id="input" placeholder="Enter a book title...">
    <button class="getbooks" id="searchBtn">Search</button>
    {{!-- <card class="booksoutput">
      <div class="output" id="output"></div>
    </card> --}}
  </div>


  <div class="favoritescontainer" align="center">
    <h3 class="favesectiontitle">Create a comment for you favorite recommendations.</h3>


    <section>
      <form class="form new-book-form">

        <div class="form-group">
          <div class="content-label"><label for="book-description" class="contentlabel">My comments:</label></div>
          <input type="text" class="favecomment-form-input" id="content-description" name="book-description"
            placeholder="This read was fire with hot chocolate!">

        </div>
        <div class="form-group">
          <button type="submit" class="createbtn" id="contentBtn">Create</button>
        </div>

      </form>
    </section>

  </div>



</section>

<section class="editdlt-comments" align="center">
<p class="reviewstitle">Reviews:</p>

{{#if comments.length}}
<div class="col-md-6 post-list">
  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <p>{{comment.content}}</p>
    </div>
   
  <div class="editdlt-btn">
   
    <button id = "edit-btn" class="btn btn-sm btn-danger">
      <a href="/api/comments/{{comment.id}}">EDIT</a></button>

      <button class="btn btn-sm btn-danger deleteBtn" data-del="{{comment.id}}">DELETE</button>
    
  </div>
  {{/each}}
</div>
{{/if}}

</section>



  {{#if logged_in}}
  <section class="flex-row justify-center">
   <p >{{drink.name}}</p>
   <p >{{drink.description}}</p>
   {{!-- <button class="getdrinks" id="drinkBtn">Drink Generator</button> --}}
  </section>
</section>

<!-- Otherwise, provide a link to login -->
