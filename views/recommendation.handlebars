<head>
  <link rel="stylesheet" href="/css/style.css">
  <title>Novel Sips | Drink Recommendations</title>
</head>

<body>

  <div class="recommendationcard" align="center">

    <div class="reccard" align="center">
      <div class="booktitle">{{book.title}}</div>
    </div>

    <div class="reccard" align="center">
      <div class="bookauthor">{{book.author}}</div>
    </div>

    <div class="reccard" align="center">
      <div class="bookimg"><img src="http://covers.openlibrary.org/b/isbn/{{book.image}}-M.jpg"></div>
    </div>

    <div class="reccard" align="center">
      <div class="cardtitle">{{drink.name}}</div>
    </div>

    <div class="reccard" align="center">
      <div class="card">{{drink.description}}</div>
    </div>

    <div class="imgcontainer">
      <img class="drinkimg" src="/images/{{drink.filename}}">
    </div>

  </div>
</body>

<script src="/js/index.js"></script>